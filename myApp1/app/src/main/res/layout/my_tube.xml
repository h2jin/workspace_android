<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/youtubeicon"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="45dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="YouTube"
            android:layout_width="130dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_marginLeft="125dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#7B7979"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/dog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="2 : 29"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:layout_width="50dp"
                android:layout_height="20dp"/>

        </FrameLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mong"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:paddingStart="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="휴지벽에 도전하는 강아지"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <TextView
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:text="속삭이는몽자"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="290dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/cat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:text="15 : 46"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/usericon"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="고양이의 하루"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:text="검은 고양이 네로"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="290dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vlog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:text="37 : 13"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hongsi"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="먹는 브이로그"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:text="Hongsi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>